---
import priyaImage from "../assets/testimonials/priya-patel.jpeg";
import sarahImage from "../assets/testimonials/sarah-chen.jpeg";
import carlosImage from "../assets/testimonials/carlos-rodriguez.jpeg";

import horizonLogo from "../assets/companies/horizon.png";
import quantixLogo from "../assets/companies/quantix.png";
import airbaseLogo from "../assets/companies/airbase.png";
import apexLogo from "../assets/companies/apex.png";
import loovoLogo from "../assets/companies/loovo.png";
import ventureLogo from "../assets/companies/venture.png";

interface Testimonial {
  name: string;
  role: string;
  company: string;
  quote: string;
  image: string;
}

const testimonials: Testimonial[] = [
  {
    name: "Sarah Chen",
    role: "Lead Engineer",
    company: "TechCorp",
    quote:
      "DevFlow reduced our API development time by 70%. The automatic scaling handled our traffic spikes flawlessly during our product launch.",
    image: sarahImage.src,
  },
  {
    name: "Carlos Rodriguez",
    role: "CTO",
    company: "StartupX",
    quote:
      "With DevFlow, we built and deployed our entire API infrastructure in a single day. The built-in auth and database integrations saved us months of work.",
    image: carlosImage.src,
  },
  {
    name: "Priya Patel",
    role: "Indie Developer",
    company: "",
    quote:
      "As a solo developer, DevFlow's free tier gave me everything I needed to launch my side project. The community has been incredibly helpful whenever I got stuck.",
    image: priyaImage.src,
  },
];

const companies = [
  { name: "Horizon", logo: horizonLogo.src },
  { name: "Quantix", logo: quantixLogo.src },
  { name: "Loovo", logo: loovoLogo.src },
  { name: "Airbase", logo: airbaseLogo.src },
  { name: "Apex", logo: apexLogo.src },
  { name: "Venture", logo: ventureLogo.src },
];
---

<section id="testimonials" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-gray-900 text-center mb-16">
      Trusted by developers worldwide
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {
        testimonials.map((testimonial) => (
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <div class="flex items-center mb-4">
              <img
                src={testimonial.image}
                alt={`${testimonial.name}`}
                class="w-12 h-12 rounded-full object-cover"
              />
              <div class="ml-4">
                <h3 class="font-semibold text-gray-900">{testimonial.name}</h3>
                <p class="text-sm text-gray-600">
                  {testimonial.role}
                  {testimonial.company && `, ${testimonial.company}`}
                </p>
              </div>
            </div>
            <p class="text-gray-600 italic">"{testimonial.quote}"</p>
          </div>
        ))
      }
    </div>

    <div class="text-center">
      <p class="text-sm font-medium text-gray-500 mb-8">
        TRUSTED BY COMPANIES OF ALL SIZES
      </p>
      <div
        class="grid grid-cols-2 md:grid-cols-6 gap-8 items-center justify-items-center"
      >
        {
          companies.map((company) => (
            <img
              src={company.logo}
              alt={company.name}
              class="h-12 w-32 object-contain"
            />
          ))
        }
      </div>
    </div>
  </div>
</section>
